#include <stdio.h>
#define MAX 20

void FCFS(int pages[], int n, int frameSize);
void LRU(int pages[], int n, int frameSize);
void Optimal(int pages[], int n, int frameSize);

int main() {
    int pages[MAX], n, frameSize;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter the page reference string:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &pages[i]);
    }

    printf("Enter frame size (minimum 3): ");
    scanf("%d", &frameSize);

    if (frameSize < 3)
        frameSize = 3;

    printf("\n--- FCFS Page Replacement ---\n");
    FCFS(pages, n, frameSize);

    printf("\n--- LRU Page Replacement ---\n");
    LRU(pages, n, frameSize);

    printf("\n--- Optimal Page Replacement ---\n");
    Optimal(pages, n, frameSize);

    return 0;
}

/* ================= FCFS ================== */
void FCFS(int pages[], int n, int frameSize) {
    int frames[frameSize], front = 0, pageFaults = 0;

    for (int i = 0; i < frameSize; i++)
        frames[i] = -1;

    for (int i = 0; i < n; i++) {
        int page = pages[i], found = 0;

        for (int j = 0; j < frameSize; j++) {
            if (frames[j] == page) {
                found = 1;
                break;
            }
        }

        if (!found) {
            frames[front] = page;
            front = (front + 1) % frameSize;
            pageFaults++;
        }

        printf("After page %d: ", page);
        for (int j = 0; j < frameSize; j++) {
            if (frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("Total Page Faults (FCFS): %d\n", pageFaults);
}

/* ================= LRU ================== */
void LRU(int pages[], int n, int frameSize) {
    int frames[frameSize], used[frameSize];
    int pageFaults = 0, time = 0;

    for (int i = 0; i < frameSize; i++)
        frames[i] = -1;

    for (int i = 0; i < n; i++) {
        int page = pages[i], found = 0;

        for (int j = 0; j < frameSize; j++) {
            if (frames[j] == page) {
                found = 1;
                used[j] = time++;
                break;
            }
        }

        if (!found) {
            int min = 0;
            for (int j = 1; j < frameSize; j++) {
                if (frames[j] == -1 || used[j] < used[min])
                    min = j;
            }
            frames[min] = page;
            used[min] = time++;
            pageFaults++;
        }

        printf("After page %d: ", page);
        for (int j = 0; j < frameSize; j++) {
            if (frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("Total Page Faults (LRU): %d\n", pageFaults);
}

/* ================= Optimal ================== */
void Optimal(int pages[], int n, int frameSize) {
    int frames[frameSize], pageFaults = 0;

    for (int i = 0; i < frameSize; i++)
        frames[i] = -1;

    for (int i = 0; i < n; i++) {
        int page = pages[i], found = 0;
        
        for (int j = 0; j < frameSize; j++) {
            if (frames[j] == page) {
                found = 1;
                break;
            }
        }

        if (!found) {
            int replaceIndex = -1, farthest = i + 1;

            for (int j = 0; j < frameSize; j++) {
                if (frames[j] == -1) {
                    replaceIndex = j;
                    break;
                }

                int nextUse = -1;
                for (int k = i + 1; k < n; k++) {
                    if (frames[j] == pages[k]) {
                        nextUse = k;
                        break;
                    }
                }

                if (nextUse == -1) {
                    replaceIndex = j;
                    break;
                } else if (nextUse > farthest) {
                    farthest = nextUse;
                    replaceIndex = j;
                }
            }

            frames[replaceIndex] = page;
            pageFaults++;
        }

        printf("After page %d: ", page);
        for (int j = 0; j < frameSize; j++) {
            if (frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("Total Page Faults (Optimal): %d\n", pageFaults);
}
